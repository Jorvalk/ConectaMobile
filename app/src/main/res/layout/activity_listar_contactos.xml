<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textColor="#000000"
    tools:context=".ListarContactos">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#444444"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnVolver2"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/volver"
            android:backgroundTint="@color/white"
            android:contentDescription="Volver atras"
            android:scaleType="centerInside" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:autofillHints="emailAddress"
        android:fontFamily="sans-serif-light"
        android:text="Listar Usuarios"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/listViewUsuarios"
        android:layout_width="408dp"
        android:layout_height="813dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="3dp"
        android:dividerHeight="10dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="28sp" />
</RelativeLayout>